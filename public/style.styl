sans-serif = "Helvetica", Arial, Sans-serif
mono-space = Menlo, Consolas, Monaco, 'Lucida Console', monospace
primary = black
link-color = blueviolet
background-color = #fffafa //rgb(229, 219, 219)// #fffafa //#edffee
tag-color = #e9e9e9

body
  font-family: mono-space
  margin-top: 4rem
  padding-left: 15px
  padding-right: 15px
  max-width: 600px
  margin-left: auto
  margin-right: auto
  background-color: background-color

h1,
h2
  font-size: 16px

h2
  font-weight: normal
  font-style: italic

a
  // color: link-color
  text-decoration: none
  &:hover
    text-decoration: underline
  
.hidden
  display: none !important

header
  a
    color: primary

.records
  padding-left: 0

  .record
    margin-top: 4rem
    margin-bottom: 4rem
    list-style: none
  
  .cover
    display: block
    width: 100%
    max-height: 355px
    cursor: pointer
  
  //.name-link
  //  color: primary
  //  &:hover
  //    .name
  //      text-decoration: underline
  
  .name
    display: inline-block
    padding: 5px 6px
    margin-bottom: 0
    cursor: pointer
  
  .clock
    margin-right: 5px
  
  .tag
    background-color: tag-color
    margin-right: 5px
    line-height: 2rem
    padding: 2px 4px
  
  .embed
    position: relative
    padding-bottom: 56.25%
    padding-top: 35px
    height: 0
    overflow: hidden
    iframe
      position: absolute
      top:0
      left: 0
      width: 100%
      height: 100%
