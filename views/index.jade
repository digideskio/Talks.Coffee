head
  title= title
  meta(name="description" content="Draw some feelings!")
  link(id="favicon" rel="icon" href="https://hyperdev.com/favicon.ico" type="image/x-icon")
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  link(rel="stylesheet" href="/style.css")
  include meta-seo
body

  header
    a(href=url)
      h1= title
    h2= description

  main
    ul.records
      - each record, index in records
        - name = record.get('Name')
        - speaker = record.get('Speaker')
        - event = record.get('Event')
        - category = record.get('Category')
        - tags = record.get('Tags')
        - minutes = record.get('Minutes')
        - why = record.get('Why')
        - duration = record.get('Duration')
        - link = record.get('Link')
        - embed = record.get('Embed')
        li.record(data-embed=embed)
          // a.name-link(href=link)
          p.name(style="background-color: #{randomcolors[index]}")= name
          .embed.hidden
          img.cover(src=defaultCover)
          p.speaker= speaker
          p.minutes
